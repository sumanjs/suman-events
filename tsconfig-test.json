{
  "compilerOptions": {
    "types": [
      "node",
      "chalk"
    ],
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "outDir": "test/target",
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016"
    ]
  },
  "include": [
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
