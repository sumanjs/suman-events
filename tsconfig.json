{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "types": [
      "node",
      "chalk"
    ],
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "test",
    "node_modules"
  ]
}
